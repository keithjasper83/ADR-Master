{
  "name": "adr-workbench",
  "version": "1.0.0",
  "description": "Offline-capable web app for authoring and managing MADR-style ADRs",
  "scripts": {
    "build:css": "npx tailwindcss -i ./app/static/css/input.css -o ./app/static/css/output.css --minify",
    "watch:css": "npx tailwindcss -i ./app/static/css/input.css -o ./app/static/css/output.css --watch",
    "dev": "npm run watch:css"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "htmx.org": "^2.0.2"
  }
}
