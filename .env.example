# ADR-Master Configuration (Multi-User, Online)

# Application
APP_NAME=ADR-Master
APP_VERSION=0.2.0
ENVIRONMENT=production
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000
BASE_URL=https://adr.example.com

# Database
DATABASE_URL=sqlite:///./adr_master.db

# Authentication & Security
SECRET_KEY=CHANGE_ME_USE_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
INVITATION_EXPIRATION_DAYS=7

# Session Cookies
SESSION_COOKIE_NAME=adr_session
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=lax

# MCP Integration (optional online service)
MCP_BASE_URL=https://mcp-server.example.com/api
MCP_TOKEN=

# LLM Endpoint (optional online service)
LLM_ENDPOINT=https://llm-api.example.com/generate

# CORS
CORS_ENABLED=true
CORS_ORIGINS=https://adr.example.com,https://app.example.com

# Logging
LOG_LEVEL=INFO
LOG_DIR=./_logs

# Data Storage
WORKDIR=/app
DATA_DIR=./data
